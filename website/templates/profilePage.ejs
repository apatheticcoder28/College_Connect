                                <%= new Date(poll.Deadline) > new Date() ? 'Active' : 'Expired' %>
                              </span>
                            </div>
                          </div>
                        <% } %>
                        
                        <div class="poll-header">
                          <h4 class="poll-title mb-3"><%= poll.Task %></h4>
                          <div class="poll-meta-tags mb-3">
                            <span class="meta-tag">
                              <i class="bi bi-calendar-event"></i>
                              <%= new Date(poll.Date).toLocaleDateString('en-US', { 
                                weekday: 'short', 
                                year: 'numeric', 
                                month: 'short', 
                                day: 'numeric' 
                              }) %>
                            </span>
                            <span class="meta-tag">
                              <i class="bi bi-clock"></i>
                              <%= poll.Time %>
                            </span>
                            <span class="meta-tag">
                              <i class="bi bi-geo-alt-fill"></i>
                              <%= poll.Location %>
                            </span>
                          </div>
                        </div>
                        
                        <div class="poll-body">
                          <div class="description-box mb-4">
                            <p class="description"><%= poll.Description %></p>
                          </div>

                          <% if (new Date(poll.Deadline) > new Date()) { %>
                            <% 
                              const currentParticipants = poll.participants ? poll.participants.length : 0;
                              const isFull = currentParticipants >= poll.MaxParticipants;
                              const currentUserId = user.ID ? user.ID.toString() : '';
                              const participantIds = poll.participants ? poll.participants.map(p => p.toString()) : [];
                              const isParticipant = participantIds.includes(currentUserId);
                              const isOwner = poll.OwnerID && poll.OwnerID._id.toString() === currentUserId;
                              const progressPercentage = (currentParticipants / poll.MaxParticipants) * 100;
                            %>

                            <!-- Participants Progress -->
                            <div class="participants-progress mb-4">
                              <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="progress-title">Event Capacity</h6>
                                <span class="capacity-badge <%= isFull ? 'full' : 'available' %>">
                                  <%= currentParticipants %>/<%= poll.MaxParticipants %> Spots
                                </span>
                              </div>
                              <div class="progress" style="height: 12px;">
                                <div class="progress-bar <%= progressPercentage >= 100 ? 'bg-success' : 'bg-primary' %>" 
                                     role="progressbar" 
                                     style="width: <%= progressPercentage %>%;" 
                                     aria-valuenow="<%= currentParticipants %>" 
                                     aria-valuemin="0" 
                                     aria-valuemax="<%= poll.MaxParticipants %>">
                                </div>
                              </div>
                            </div>

                            <!-- Participants List -->
                            <div class="participants-section">
                              <h6 class="section-title mb-3">
                                <i class="bi bi-people-fill me-2"></i>
                                Participants
                              </h6>
                              <% if (poll.participants && poll.participants.length > 0) { %>
                                <div class="participants-grid">
                                  <% poll.participants.forEach((participant) => { %>
                                    <div class="participant-card">
                                      <div class="d-flex align-items-center p-3">
                                        <div class="participant-avatar">
                                          <img src="/assets/img/<%= participant.ProfileImg || 'default.png' %>" 
                                               alt="Profile" 
                                               class="rounded-circle"
                                               style="width: 60px; height: 60px; object-fit: cover;">
                                        </div>
                                        <div class="participant-info ms-3">
                                          <h6 class="participant-name mb-1"><%= participant.FirstName %> <%= participant.LastName %></h6>
                                          <div class="participant-badges mb-1">
                                            <span class="department-badge">
                                              <%= participant.department || 'No Department' %>
                                            </span>
                                            <span class="year-badge">
                                              <%= participant.year || 'Unknown' %> Year
                                            </span>
                                          </div>
                                          <div class="participant-contact">
                                            <small class="text-muted">
                                              <i class="bi bi-envelope"></i> <%= participant.Email %>
                                            </small>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  <% }); %>
                                </div>
                              <% } else { %>
                                <div class="empty-participants">
                                  <i class="bi bi-people"></i>
                                  <p>No participants yet</p>
                                </div>
                              <% } %>
                            </div>

                            <% if (!isOwner) { %>
                              <div class="poll-action-button mt-4" data-poll-id="<%= poll._id %>">
                                <% if (isParticipant) { %>
                                  <button class="btn btn-danger btn-lg w-100 leave-poll-btn">
                                    <i class="bi bi-box-arrow-left me-2"></i>Leave Event
                                  </button>
                                <% } else if (isFull) { %>
                                  <button class="btn btn-secondary btn-lg w-100" disabled>
                                    <i class="bi bi-x-circle me-2"></i>Event Full
                                  </button>
                                <% } else { %>
                                  <button class="btn btn-primary btn-lg w-100 join-poll-btn">
                                    <i class="bi bi-plus-circle me-2"></i>Join Event
                                  </button>
                                <% } %>
                              </div>
                            <% } %>
                          <% } %>
                        </div>
                        <% if (poll.OwnerID && poll.OwnerID._id && poll.OwnerID._id.toString() === user.ID.toString()) { %>
                          <div class="poll-actions mt-3">
                            <!-- Edit Button -->
                            <a href="/edit-poll/<%= poll._id %>" class="btn btn-primary btn-sm">
                              <i class="bi bi-pencil-square"></i> Edit
                            </a>
                          </div>
                        <% } %>
                                              
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <div class="col-12">
                    <div class="empty-state">
                      <i class="bi bi-calendar-plus"></i>
                      <h4>No Polls Yet</h4>
                      <p>Create your first poll to engage with your community</p>
                      <a href="/create-poll" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-lg"></i> Create Poll
                      </a>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

