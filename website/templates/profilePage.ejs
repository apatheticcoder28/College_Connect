                            </div>
                            <post-tags>
                              <span><i class="bi bi-tags"></i> <%= post.Tags || 'No Tags' %></span>
                            </post-tags>
                          </div>
                        </a>
                        <% if (post.OwnerID.toString() === user.ID.toString()) { %>
                          <div class="post-actions">
                            <a href="/edit-post/<%= post._id %>" class="btn btn-primary btn-sm">
                              <i class="bi bi-pencil-square"></i> Edit
