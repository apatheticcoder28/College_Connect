    } catch (error) {
      console.error('Error clearing notifications:', error);
    }
  });
  
  document.addEventListener('DOMContentLoaded', () => {
    displayNotifications();
    setInterval(displayNotifications, 30000); // Refresh every 30 seconds
  });
