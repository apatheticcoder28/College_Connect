          // Sort polls by date (newest first)
          function sortPollsDescending(polls) {
            return [...polls].sort((a, b) => {
              if (a.createdAt && b.createdAt) {
                return new Date(b.createdAt) - new Date(a.createdAt);
              }
              return 0;
