  <script>
    let currentPart = 0;
    showPart(currentPart);

    function showPart(part) {
        let parts = document.getElementsByClassName("form-part");
        let dots = document.getElementsByClassName("dot");

        for (let i = 0; i < parts.length; i++) {
            parts[i].style.display = "none";
            dots[i].classList.remove("active");
        }

        parts[part].style.display = "block";
        dots[part].classList.add("active");
    }

    function currentStep(part) {
        currentPart = part;
        showPart(currentPart);
    }

        // JavaScript for profile image upload
        document.getElementById('profile-image-upload').addEventListener('change', function(event) {
        var file = event.target.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('current-profile-image').src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    });

      // JavaScript for validation
      function validateInput(input) {
        input.value = input.value.replace(/[^a-zA-Z\s]/g, '');
    }

    (function() {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
    })();
</script>
