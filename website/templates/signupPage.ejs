<script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>
<script>
  // Initialize Croppie with adjusted settings for reduced sensitivity
  let croppieInstance;
  const croppieContainer = document.getElementById('croppie-container');
  const croppingModal = new bootstrap.Modal(document.getElementById('cropping-modal'));

  document.getElementById('profile-image-upload').addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
          const reader = new FileReader();
          reader.onload = function(e) {
              if (croppieInstance) croppieInstance.destroy();
              croppieInstance = new Croppie(croppieContainer, {
                  viewport: { width: 120, height: 120, type: 'circle' },
                  boundary: { width: 250, height: 250 },
                  showZoomer: true,
                  mouseWheelZoom: false, // Disable mouse wheel zoom to avoid oversensitivity
                  enableResize: true, // Allow resizing within boundary
                  enableOrientation: true // Allow image rotation for alignment
              });
              croppieInstance.bind({ url: e.target.result });
              croppingModal.show();
          };
          reader.readAsDataURL(file);
      }
  });

  document.getElementById('crop-image-btn').addEventListener('click', function() {
      croppieInstance.result('base64').then(function(base64) {
          document.getElementById('current-profile-image').src = base64;
          croppingModal.hide();
      });
  });
</script>

